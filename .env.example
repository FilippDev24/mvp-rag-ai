# Environment Variables Template for Knowledge Base RAG MVP
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://admin:password@localhost:5432/knowledge_base
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=knowledge_base

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT Security
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRY=7d

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8012
CHROMADB_URL=http://localhost:8012

# LLM Configuration (your gpt-oss-20b model)
LLM_HOST=http://localhost:8000
LLM_API_TYPE=vllm
LLM_MODEL_NAME=openai/gpt-oss-20b
VLLM_HOST=http://localhost:8000

# Local ML Services (running on host)
LOCAL_EMBEDDING_URL=http://localhost:8003
LOCAL_RERANKER_URL=http://localhost:8002

# Embedding Model Configuration
EMBEDDING_MODEL=intfloat/multilingual-e5-large-instruct
EMBEDDING_DIMENSION=1024
EMBEDDING_MAX_SEQ_LENGTH=512
EMBEDDING_BATCH_SIZE=32

# Reranker Model Configuration
RERANKER_MODEL=BAAI/bge-reranker-v2-m3
RERANKER_MAX_LENGTH=512

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:3001/api
VITE_PORT=3000

# Node.js Configuration
NODE_ENV=development
PORT=3001

# Python Configuration
PYTHONPATH=/app

# Celery Worker Configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_PREFETCH_MULTIPLIER=1

# Logging
LOG_LEVEL=info

# Production overrides (for deployment/.env.prod)
# POSTGRES_PASSWORD=secure_production_password
# JWT_SECRET=production-jwt-secret-32-chars-minimum
# NODE_ENV=production
# VITE_API_URL=http://your-server-ip:3001/api
