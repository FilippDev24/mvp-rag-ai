{
  "info": {
    "name": "Knowledge Base - Documents API",
    "description": "API endpoints for document management in Knowledge Base RAG MVP",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3004",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "document_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "chunk_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.data.token);",
                  "    console.log('JWT token saved:', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@test.com\",\n  \"password\": \"Admin123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Documents",
      "item": [
        {
          "name": "Upload Document",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('document_id', response.data.id);",
                  "    console.log('Document ID saved:', response.data.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "title",
                  "value": "Test Document",
                  "type": "text"
                },
                {
                  "key": "accessLevel",
                  "value": "50",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/documents/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "upload"]
            }
          }
        },
        {
          "name": "Get All Documents",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents?page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "documents"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Document by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents/{{document_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "{{document_id}}"]
            }
          }
        },
        {
          "name": "Delete Document",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents/{{document_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "{{document_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Chunks",
      "item": [
        {
          "name": "Get Document Chunks",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.length > 0) {",
                  "        pm.collectionVariables.set('chunk_id', response.data[0].id);",
                  "        console.log('Chunk ID saved:', response.data[0].id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents/{{document_id}}/chunks?page=1&limit=50",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "{{document_id}}", "chunks"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            }
          }
        },
        {
          "name": "Update Chunk",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Updated chunk content\",\n  \"metadata\": {\n    \"updated\": true,\n    \"updatedAt\": \"2024-01-01T00:00:00Z\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/documents/{{document_id}}/chunks/{{chunk_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "{{document_id}}", "chunks", "{{chunk_id}}"]
            }
          }
        },
        {
          "name": "Delete Chunk",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents/{{document_id}}/chunks/{{chunk_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "{{document_id}}", "chunks", "{{chunk_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Error Cases",
      "item": [
        {
          "name": "Upload without file",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Test Document",
                  "type": "text"
                },
                {
                  "key": "accessLevel",
                  "value": "50",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/documents/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "upload"]
            }
          }
        },
        {
          "name": "Upload without title",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "accessLevel",
                  "value": "50",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/documents/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "upload"]
            }
          }
        },
        {
          "name": "Get non-existent document",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents/non-existent-id",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "non-existent-id"]
            }
          }
        },
        {
          "name": "Access without authentication",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents",
              "host": ["{{base_url}}"],
              "path": ["api", "documents"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "auth": {
          "type": "noauth"
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    }
  ]
}
